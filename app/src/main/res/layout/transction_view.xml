<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    android:elevation="8dp"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/transferamount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amount Is : "
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/trsource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="From This User : "
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_below="@+id/transferamount"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/trtarget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To This User : "
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_below="@+id/trsource"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/trdesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description Is : "
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_below="@+id/trtarget"
            android:textColor="@color/black"/>


        <TextView
            android:id="@+id/trdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date Is : "
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_below="@id/trdesc"
            android:textColor="@color/black"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>